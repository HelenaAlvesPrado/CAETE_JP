import numpy as np
import netCDF4 as nc
import os 


class gridcell:
    
    
    def __init__(self, x, y, time, cell_id):
        
        # CELL Identifiers 
        self.x = np.int32(x)
        self.y = np.int32(y)
        self.time = time
        self.cell_id = cell_id
        self.pos = (self.x, self.y)
        
        # Input data
        self.pr = 0 # these must be vectors
        self.ps = 0
        self.rsds = 0
        self.tas = 0
        self.rhs = 0
        
        # Time attributes
        self.calendar = 'noleap'
        self.time_origin = 'days since 1850-01-01'
        
        # Water balance attributes
        self.mrro = np.float32(0)
        self.mrso = np.float32(0)
        
        # Carbon balance attributes
        self.npp = 0
        
        
    def __str__(self):    
        return "gridcell at x = %d; y=%d" %(self.x, self.y)

    
    def start(self, input_file):
        pass
        

    def run_model(self):
        pass
